map $http_host $magesite {

<% node[:magento][:run_codes].each do |domain, code| %><%= "#{domain} #{code};\n" %><% end %>
}

server {
<% if @ssl %>
  listen <%= @https %>;
  ssl on;
  ssl_certificate ssl/<%= @sitedomain %>.crt;
  ssl_certificate_key ssl/<%= @sitedomain %>.key;
  access_log  <%= node[:nginx][:log_dir] %>/<%= @sitedomain %>-ssl.access.log;
<% else %>
  <% if node[:magento][:varnish][:use_varnish] %><%= "listen #{node[:magento][:varnish][:backend_http]};" %>
  <% else %><%= "listen #{@http};" %><% end %>
  access_log  <%= node[:nginx][:log_dir] %>/<%= @sitedomain %>.access.log;
<% end %>

  server_name  <%= node[:hostname] %>;
  root <%= @path %>;
  autoindex off;

  # protection (we have no .htaccess)
  location ~ (^/(app/|includes/|lib/|/pkginfo/|var/|report/config.xml)|/\.git/|/\.hg/|/\.svn/|\.installed|\.ssh|/.hta.+) {
    deny all;
  }

  # handle all .php files, /downloader and /report
  location ~ (\.php|/downloader/?|/report/?)$ {
    if ($request_uri ~ /(downloader|report)$){ # no trailing /, redirecting
      rewrite  ^(.*)$ $1/ permanent;
    }
    fastcgi_index index.php;
    include /etc/nginx/fastcgi_params;
    fastcgi_param MAGE_RUN_TYPE <%= node[:magento][:run_type] %>;
    fastcgi_param MAGE_RUN_CODE $magesite;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    <% if @ssl %>fastcgi_param HTTPS on;<% end %>
    if (-e $request_filename) { # check if requested path exists
      fastcgi_pass <%= node['php-fpm']['pool']['magento']['listen'] %>;
    }
  }

  # handle magento
  location / {
    # set expire headers
    if ($request_uri ~* "\.(ico|css|js|gif|jpe?g|png)$") {
      expires max;
    }
    # set fastcgi settings, not allowed in the "if" block
    include /etc/nginx/fastcgi_params;
    fastcgi_param MAGE_RUN_TYPE <%= node[:magento][:run_type] %>;
    fastcgi_param MAGE_RUN_CODE $magesite;
    fastcgi_param SCRIPT_FILENAME $document_root/index.php;
    fastcgi_param SCRIPT_NAME /index.php;
    <% if @ssl %>fastcgi_param HTTPS on;<% end %>
    # rewrite - if file not found, pass it to the backend
    if (!-f $request_filename) {
      fastcgi_pass <%= node['php-fpm']['pool']['magento']['listen'] %>;
      break;
    }
  }
}
